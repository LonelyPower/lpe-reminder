{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "lpe-reminder",
  "version": "0.1.0",
  "identifier": "com.lonelypower.lpe-reminder",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "lpe-reminder",
        "width": 450,
        "height": 550,
        "minWidth": 350,
        "minHeight": 600,
        "decorations": false,
        "transparent": true,
        "shadow": false,
        "visible": false
      },
      {
        "label": "float",
        "title": "LPE Timer",
        "url": "float-window.html",
        "width": 120,
        "height": 50,
        "resizable": false,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "transparent": true,
        "shadow": false,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "nsis",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
