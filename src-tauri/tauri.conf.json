{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "lpe-reminder",
  "version": "0.1.0",
  "identifier": "com.lonelypower.lpe-reminder",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "lpe-reminder",
        "width": 800,
        "height": 600
      },
      {
        "label": "floating-ball",
        "title": "Floating Ball",
        "url": "floating-ball.html",
        "width": 80,
        "height": 80,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": false,
        "x": 100,
        "y": 100
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "nsis",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
